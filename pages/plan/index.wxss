@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 

.map-toggle {
  padding: 20rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
  z-index: 102;
}

.toggle-text {
  font-size: 28rpx;
  color: #1890ff;
}

.toggle-icon {
  font-size: 24rpx;
  color: #1890ff;
}

.attraction-item {
  position: relative;
  padding-left: 60rpx;
}

.attraction-index {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 32rpx;
  height: 32rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

