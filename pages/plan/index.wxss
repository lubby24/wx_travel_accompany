.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  position: relative;
}

.fixed-header {
  background: #fff;
  z-index: 10;
  padding-bottom: 10rpx;
}

.main-content {
  flex: 1;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.map-wrapper {
  height: 0;
  transition: height 0.3s ease;
  position: relative;
  z-index: 5;
}

.map-wrapper.show {
  height: 500rpx;
}

.map {
  width: 100%;
  height: 100%;
  position: relative;
}

.attractions-list {
  flex: 1;
  overflow-y: auto;
}

.attractions-list.with-map {
  height: calc(100% - 500rpx);
}

.fixed-footer {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  z-index: 10;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.date-section {
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.date-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.date-item {
  flex: 1;
}

.date-content {
  padding: 16rpx 0;
}

.date-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.date-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.date-separator {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.line {
  height: 2rpx;
  background: #e8e8e8;
  flex: 1;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #1890ff;
  border-radius: 50%;
  position: absolute;
}

.trip-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-around;
}

.days-count, .spots-count {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.days-count::before, .spots-count::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: #1890ff;
  border-radius: 50%;
  margin-right: 10rpx;
}

.attractions-list {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.attraction-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  animation: fadeIn 0.3s ease;
  position: relative;
  padding-left: 60rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

